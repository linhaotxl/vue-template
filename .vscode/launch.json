  "version": "0.2.0",
  "configurations": [
    {
      "name": "debugger launch",
      "request": "launch",
      "type": "node",
      "program": "${workspaceFolder}/packages/example/scripts/webpack.js",
      "stopOnEntry": true,
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/packages/example"
    },
    // 以下需要先启动 node --inspect-brk 再开启 debugger 即可
    {
      "name": "debugger attach",
      "type": "node",
      "request": "attach",
      "port": 9229
    }
  ]
}
